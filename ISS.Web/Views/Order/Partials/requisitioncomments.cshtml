            @Html.Hidden("CommentReqVersionNo")</td>
        <td class="espace"> </td>
        <td>@Html.Kendo().TextBoxFor(d => d.RequisitionId).HtmlAttributes(new { @class = "widthm1", @disabled = "disabled" })</td>
        <td class="dspace"> </td>
        <td class="tdlbl1"> <label>Requisition Revision</label></td>
        <td class="espace"> </td>
        <td>
            <label id="lblRequisitionVersion" for="RequisitionVersion" class="reqCommentClear"></label>
        </td>
        <td class="dspace"> </td>
</tr>
<tr class="blankrow1"></tr>
    <tr>
        <td class="tdlbl1"> @Html.LabelFor(d => d.PlanningContact)</td>
        <td class="espace"> </td>
        <td><label id="lblPlanningContact" for="PlanningContact" class="reqCommentClear"></label></td>
        <td class="dspace"> </td>
        <td class="tdlbl1"> @Html.LabelFor(d => d.RequisitionApprover)</td>
        <td class="espace"> </td>
        <td><label id="lblRequisitionApprover" for="RequisitionApprover" class="reqCommentClear"></label></td>
        <td class="dspace"> </td>
    </tr>
<tr class="blankrow1"></tr>
<tr>
    <td class="tdlbl1"><label>Planner User ID</label></td>
    <td class="espace"> </td>
    <td><label id="lblCreatedBy" for="CreatedBy" class="reqCommentClear"></label></td>
    <td class="dspace"> </td>
    <td class="tdlbl1"> @Html.LabelFor(d => d.RequisitionApproverId)</td>
    <td class="espace"> </td>
    <td><label id="lblRequisitionApproverId" for="RequisitionApproverId" class="reqCommentClear"></label></td>

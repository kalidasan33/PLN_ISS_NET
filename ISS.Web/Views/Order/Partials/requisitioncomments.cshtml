    <td class="espace"> </td>
    <td><label id="lblUpdatedByAppr" for="UpdatedBy" class="reqCommentClear"></label></td>
    <td class="dspace"> </td>
</tr>
<tr class="blankrow1"></tr>
<tr>
    <td class="tdlbl1"> @Html.LabelFor(d => d.RequisitionComment.PlannerComment)</td>
    <td class="espace"> </td>
    <td class="tdlbl1" colspan="5"> @Html.TextAreaFor(d => d.RequisitionComment.PlannerComment, new { id = "txtPlannerComment", @class="k-textbox", @cols="50", @rows="8" })</td>
    
</tr>
    <tr class="blankrow1"></tr>
    <tr>
        <td class="tdlbl1"> @Html.LabelFor(d => d.RequisitionComment.ApproverComment)</td>
        <td class="espace"> </td>
        <td class="tdlbl1" colspan="5"> @Html.TextAreaFor(d => d.RequisitionComment.ApproverComment, new { id = "txtApproverComment", @class = "k-textbox", @cols = "50", @rows = "8" })</td>
        
    </tr>
    <tr class="blankrow1"></tr>
   <tr>
       <td class="tdlbl1">  </td>
       <td class="espace"> </td>

       <td colspan="5">
           <div class="btnContainer floatRight">
               <input type="submit" value="Save" id="btnReqCommentsSave" />
           </div>
       </td>
   </tr>
</table>
   

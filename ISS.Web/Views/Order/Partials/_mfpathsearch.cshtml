@using ISS.Core.Model.Order;
@model WorkOrderDetail
           <title> Select a  path </title>
@using (Html.BeginForm("GetMFGPathId", "Order", FormMethod.Post, new { Id = "frmmfPath" }))
{
    @(Html.Kendo().Grid<WorkOrderDetail>().Name("grdmfPathDetails").HtmlAttributes(new { @class = "kgridheightsmall" }).Columns(
                        columns =>
                        {
                            columns.Command(command => command.Custom("Select").Click((ViewBag.SelectEvent == null) ? "WO.showmfgPathDetails" : ViewBag.SelectEvent)).Width(ISS.Common.LOVConstants.Width.Medium1).Title("Select");
                            columns.Bound(s => s.MfgPathId).Width(ISS.Common.LOVConstants.Width.Medium3).Title("Path ID");
                            columns.Bound(s => s.SewPlt) ;                          
                        }
                        )
                        .AutoBind(false)       
                        .Scrollable(scroll =>
                            {
                                scroll.Enabled(true);
                                scroll.Height("auto");
                            })
                        .Resizable(resizing => resizing.Columns(true)).Pageable(conf =>
                            {
                                conf.PageSizes(ISS.Common.LOVConstants.PageSizes);
                                conf.Enabled(true);
                            })
                        .Events(e=> e.DataBound("ISS.common.dataBoungGrid"))
                        .Sortable()
                        .DataSource(dataSource => dataSource
                            .Ajax()
                            .ServerOperation(false)
                            .Read(read =>
                            {
                                //read.Url("../Order/GetMFGPathId");
                                read.Action("GetMFGPathId", "order", new { area = "" });
                                read.Data((ViewBag.ReadData == null) ? "WO.retrieveMFGData" : ViewBag.ReadData);
                            })
                        )

    )
}

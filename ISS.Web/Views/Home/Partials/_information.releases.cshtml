@using Kendo.Mvc.UI;
@(Html.Kendo().PanelBar()
        .Name("panelbar-images")
        .Items(panelbar =>
        {
            panelbar.Add().Text("Search Criteria")
                .ImageUrl(Url.Content("~/images/icon_print.png"))
                .Content(@<div> <table style="margin:20px;border:1px; padding:5px; "><tr><td>Work Center</td><td><input type="text" style="margin-left:5px;" /></td><td><input type="submit" value="Search" style="margin-left:5px;" /></td></tr></table></div>).Expanded(true);

            panelbar.Add().Text("Search Results")
            .ImageUrl(Url.Content("~/images/icon_print.png"))
            .Content(@<div id="releaseResults">
                @(Html.Kendo().Grid<ISS.Core.Model.Information.Releases>().Name("grdReleases").Columns(
                columns =>
                {
                    columns.Bound(p => p.UpdatedDateDisp).Width(120);
                    columns.Bound(p => p.OrderId).Width(100); ;
                    columns.Bound(p => p.SellingStyle).Width(100); ;
                    columns.Bound(p => p.StyleCode).Width(100); ;
                    columns.Bound(p => p.ColorCode).Width(80); ;
                    columns.Bound(p => p.AttributeCode).Width(80);
                    columns.Bound(p => p.SizeShortDesc);
                    columns.Bound(p => p.DCloc).Width(80);

                    columns.Bound(p => p.SewPlant).Width(80);
                    columns.Bound(p => p.CutPlant).Width(80);
                    columns.Bound(p => p.textilePlant).Width(80);
                    columns.Bound(p => p.TotalCurrentOrderQuantity).Width(80);
                    columns.Bound(p => p.RemoteUpdateCode);
                    columns.Bound(p => p.Reason).HtmlAttributes(new { style = "color:red;" }).Width(180);
                    columns.Bound(p => p.MultiSKU);
                    columns.Bound(p => p.SuperOrder);
                    columns.Bound(p => p.CuttingAlt);
                    columns.Bound(p => p.FabricLbs);
                    columns.Bound(p => p.GreigeLbs);
                    columns.Bound(p => p.CreateBD);
                    columns.Bound(p => p.DzOnly);

                }
                )
                .Scrollable().Resizable(resizing => resizing.Columns(true)).Pageable().Filterable().Sortable()
                .DataSource(dataSource => dataSource
                    .Ajax()
                            .PageSize(20)
                                    .Read(read => read.Action("Releases", "Home"))
                )
                )
            </div>).Expanded(true);
        })
)

@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetOrderStatus", "Order").Type(HttpVerbs.Post);
      }).ServerFiltering(false);
  })
          .DataValueField("Text")
  .DataTextField("Text")
  .Events(e => e.Change("WOM.OrderChange"))
)
 


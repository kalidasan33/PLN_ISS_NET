@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetSkuColors", "Order").Type(HttpVerbs.Post).Data("WO.retrieveColorsData");
      }).ServerFiltering(false);
  })
  .DataValueField("Color")
  .DataTextField("ColorName")
  .Events(e =>
  {
      e.Change("WO.onColorChanged");
  })
)


@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetSkuColors", "Order", new { area = "" }).Type(HttpVerbs.Post).Data("retrieveColorData");
      }).ServerFiltering(false);
  })
  .DataValueField("Color")
  .DataTextField("ColorName")
  .Events(e =>
  {
    e.Select("onColorSelect");
  })
)

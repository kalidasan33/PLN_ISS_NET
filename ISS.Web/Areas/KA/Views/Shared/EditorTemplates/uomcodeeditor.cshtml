@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetSkuUom", "Order", new { area = "" }).Type(HttpVerbs.Post).Data("retrieveUomData");
      }).ServerFiltering(false);
  })
  .DataValueField("Uom")
  .DataTextField("UomDesc")
)
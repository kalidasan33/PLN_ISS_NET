@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetRevisionNumbers", "Order", new { area = "" }).Type(HttpVerbs.Post).Data("retrieveUomData");
      }).ServerFiltering(false);
  })
  .DataValueField("Rev")
  .DataTextField("RevDesc")
  .Events(e =>
  {
      e.Select("onRevSelect");
  })
)
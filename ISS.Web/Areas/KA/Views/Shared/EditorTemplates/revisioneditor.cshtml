@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;
@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetRevisionNumbersInline", "../Order").Type(HttpVerbs.Post).Data("WOM.RevisionFilterData");
      }).ServerFiltering(false);
  })
      .DataValueField("Revision")
      .DataTextField("Revision")
  .Events(e =>
  {
      e.Change("WOM.RevisionChange");
  })
)
@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetSkuAttributes", "Order", new { area = "" }).Type(HttpVerbs.Post).Data("retrieveAttributeData");
      }).ServerFiltering(false);
  })
      .DataValueField("Attribute")
      .DataTextField("AttributeDesc")
  .Events(e =>
  {
    e.Select("onAttributeSelect");
  })
)

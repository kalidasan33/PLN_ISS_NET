@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetAttributeCodes", "Order", new { area = "" }).Type(HttpVerbs.Post).Data("WO.retrieveAOAttributeData");
      }).ServerFiltering(false);
  })
      .DataValueField("Attribute")
          .DataTextField("Attribute")
  .Events(e =>
  {
      e.Change("WO.onAttributeChange");
  })
)

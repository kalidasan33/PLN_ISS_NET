@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;
@(Html.Kendo().DropDownListFor(m => m)
 .DataSource(source =>
  {
      source.Read(read =>
      {
          read.Action("GetSkuSizes", "../Order").Type(HttpVerbs.Post).Data("WOM.FilterData");
      }).ServerFiltering(false);
  })
      .DataValueField("SizeDesc")
      .DataTextField("SizeDesc")
  .Events(e =>
  {
      e.Change("WOM.SizeChange");
  })
)
